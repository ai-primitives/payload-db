# MongoDB Connection (any of these will work)
MONGO_URI=mongodb://localhost:27017/my-db
# MONGODB_URI=mongodb://localhost:27017/my-db
# DATABASE_URI=mongodb://localhost:27017/my-db

# PostgreSQL Connection
# POSTGRES_URI=postgres://user:pass@localhost:5432/my-db
# DATABASE_URI=postgres://user:pass@localhost:5432/my-db

# SQLite Connection
# SQLITE_URI=sqlite://path/to/database.sqlite
# DATABASE_URI=sqlite://path/to/database.sqlite

# Payload CMS Secret
PAYLOAD_SECRET=your-secret-key-here

# Server URL (optional)
# SERVER_URL=http://localhost:3000
